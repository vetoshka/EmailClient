<Page x:Class="EmailClient.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmailClient"
      xmlns:models="clr-namespace:EmailClient.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">
    <Page.DataContext>
        <models:EmailMessageModel/>
    </Page.DataContext>
    <Grid>
        <ListView Name="messageList">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Subject}">Subject</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding From.Address }" Width="100">From</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Frame Grid.Column="1" Name="contentFrame" NavigationUIVisibility="Hidden" />
        <Button Content="LogOut" HorizontalAlignment="Left" Margin="629,395,0,0" VerticalAlignment="Top" Height="26" Width="129" Click="Button_Click"/>
        <Button Content="New message" HorizontalAlignment="Left" Margin="58,375,0,0" VerticalAlignment="Top" Height="33" Width="225" Click="New_Message_Button_Click"/>
    </Grid>
</Page>
